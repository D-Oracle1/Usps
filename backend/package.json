{
  "name": "backend",
  "version": "1.0.0",
  "description": "Courier Tracking System - Real-time Backend Admin Portal",
  "main": "dist/main.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "prisma generate && nest build",
    "start:prod": "echo 'Pushing schema to database...' && prisma db push --accept-data-loss --skip-generate && echo 'Schema push complete!' && node dist/main",
    "vercel-build": "prisma generate && nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "postinstall": "prisma generate",
    "test": "echo \"Tests not implemented yet\""
  },
  "keywords": [
    "nestjs",
    "tracking",
    "websockets",
    "courier"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@nestjs/common": "^11.1.11",
    "@nestjs/config": "^4.0.2",
